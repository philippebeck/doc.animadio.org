<article class="menu-target1">
    <h3>Anima</h3>

    <section class="card-blue">
        <h4>Anima Infos</h4>
        <p>Anima classes are designed to provide animations with common options such as duration, delay, iteration, or direction, add a states keywords to use it as a special effect</p>
        <a class="btn-blue" href="https://github.com/animadio/animadio/blob/master/src/states/anima.css" title="View CSS Source @GitHub" rel="noreferrer noopener" target="_blank">
            <i class="fab fa-css3 fa-lg" aria-hidden="true"></i>
        </a>
    </section>

    <table id="anima-datas" class="table">
        <caption>Anima Datas</caption>

        <thead>
        <tr>
            <th>Class</th>
            <th>Property</th>
            <th>Value</th>
            <th>Screen</th>
            <th>Concat</th>
        </tr>
        </thead>

        <tbody>
        {% for anima in allAnimaClasses %}
            <tr>
                <th>{{ anima.class }}</th>
                <td>{{ anima.property }}</td>
                <td>{{ anima.valor }}</td>
                <td>{{ anima.screen }}</td>
                <td>{{ anima.concat|replace({'1': "yes", '0': "no"}) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
